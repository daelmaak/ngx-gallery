{
  "name": "@daelmaak/ngx-gallery",
  "version": "2.0.0",
  "license": "Apache-2.0",
  "author": {
    "name": "Daniel Macak",
    "email": "daniel.macak@email.cz"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host 0.0.0.0 demo",
    "build": "ng build --configuration production --project=gallery",
    "build:demo": "ng build --configuration production --project=demo --base-href /ngx-gallery/",
    "build:demo:local": "ng build --project=demo --base-href /",
    "test": "ng test --project=gallery --browsers=ChromeHeadlessLocal",
    "test:ci": "ng test --project=gallery --watch=false --code-coverage --browsers=ChromeHeadless",
    "lint": "ng lint",
    "release-changelog": "cd projects/gallery && standard-version -i ../../CHANGELOG.md",
    "release": "npm run release-changelog && git push --follow-tags",
    "release:rc": "npm run release-changelog -- --prerelease RC && git push --follow-tags"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.1.7",
    "@angular/cdk": "^16.1.6",
    "@angular/common": "^16.1.7",
    "@angular/compiler": "^16.1.7",
    "@angular/core": "^16.1.7",
    "@angular/forms": "^16.1.7",
    "@angular/material": "^16.1.6",
    "@angular/platform-browser": "^16.1.7",
    "@angular/platform-browser-dynamic": "^16.1.7",
    "rxjs": "~6.6.7",
    "zone.js": "^0.13.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.1.6",
    "@angular-devkit/core": "^16.1.6",
    "@angular-eslint/builder": "16.1.0",
    "@angular-eslint/eslint-plugin": "16.1.0",
    "@angular-eslint/eslint-plugin-template": "16.1.0",
    "@angular-eslint/schematics": "16.1.0",
    "@angular-eslint/template-parser": "16.1.0",
    "@angular/cli": "^16.1.6",
    "@angular/compiler-cli": "^16.1.7",
    "@angular/language-service": "^16.1.7",
    "@types/estree": "^1.0.1",
    "@types/jasmine": "~3.10.2",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^18.17.1",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "eslint": "^8.39.0",
    "jasmine-core": "~3.10.1",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.3.9",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "^2.1.0",
    "karma-firefox-launcher": "^2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-packagr": "^16.1.0",
    "prettier": "^2.0.5",
    "standard-version": "^9.3.2",
    "typescript": "~5.1.6"
  }
}
