    "@angular-eslint/template-parser": "16.1.0",
    "@angular/cli": "^16.1.6",
    "@angular/compiler-cli": "^16.1.7",
    "@angular/language-service": "^16.1.7",
    "@cypress/webpack-dev-server": "^2.0.0",
    "@nx/angular": "16.6.0",
    "@nx/eslint-plugin": "16.6.0",
    "@nx/js": "16.6.0",
