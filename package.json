  "scripts": {
    "nx": "nx",
    "start": "nx run demo:serve --host 0.0.0.0",
    "build": "nx run gallery:build:production",
    "build:demo": "nx build --configuration production --project=demo --base-href /ngx-gallery/",
    "bundle-stats": "nx build --project=demo --stats-json && webpack-bundle-analyzer docs/stats.json",
    "test": "nx test --project=gallery --browsers=ChromeHeadlessLocal",
    "test:ci": "nx test --project=gallery --watch=false --code-coverage --browsers=ChromeHeadless",
    "test:cy": "nx component-test gallery --watch",
    "test:cy:ci": "nx component-test gallery",
    "lint": "nx lint --project=gallery",
    "release-changelog": "cd libs/gallery && standard-version -i ../../CHANGELOG.md",
    "release": "yarn release-changelog && git push --follow-tags",
    "release:rc": "yarn release-changelog --prerelease RC && git push --follow-tags"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.1.7",
