{
  "name": "@daelmaak/ngx-gallery",
  "version": "2.0.0",
  "license": "Apache-2.0",
  "author": {
    "name": "Daniel Macak",
    "email": "daniel.macak@email.cz"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host 0.0.0.0 demo",
    "build": "ng build --configuration production",
    "build:demo": "ng build --configuration production --project=demo --base-href /ngx-gallery/",
    "build:demo:local": "ng build --project=demo --base-href /",
    "test": "ng test --project=gallery --browsers=ChromeHeadlessLocal",
    "test:demo": "ng test --project=demo",
    "test:ci": "ng test --project=gallery --watch=false --code-coverage --browsers=ChromeHeadless",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "release-changelog": "cd projects/gallery && standard-version -i ../../CHANGELOG.md",
    "release": "npm run release-changelog && git push --follow-tags",
    "release:rc": "npm run release-changelog -- --prerelease RC && git push --follow-tags"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^13.1.1",
    "@angular/cdk": "^13.1.1",
    "@angular/common": "~13.1.1",
    "@angular/compiler": "~13.1.1",
    "@angular/core": "~13.1.1",
    "@angular/forms": "~13.1.1",
    "@angular/material": "^13.1.1",
    "@angular/platform-browser": "~13.1.1",
    "@angular/platform-browser-dynamic": "~13.1.1",
    "@angular/router": "~13.1.1",
    "intersection-observer": "^0.11.0",
    "rxjs": "~6.6.7",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.1.2",
    "@angular-devkit/core": "^13.1.2",
    "@angular-eslint/builder": "13.0.1",
    "@angular-eslint/eslint-plugin": "13.0.1",
    "@angular-eslint/eslint-plugin-template": "13.0.1",
    "@angular-eslint/schematics": "13.0.1",
    "@angular-eslint/template-parser": "13.0.1",
    "@angular/cli": "~13.1.2",
    "@angular/compiler-cli": "~13.1.1",
    "@angular/language-service": "~13.1.1",
    "@types/estree": "^0.0.50",
    "@types/jasmine": "~3.10.2",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^16.11.17",
    "@typescript-eslint/eslint-plugin": "5.3.0",
    "@typescript-eslint/parser": "5.3.0",
    "eslint": "^8.2.0",
    "jasmine-core": "~3.10.1",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.3.14",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "^2.1.0",
    "karma-firefox-launcher": "^2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-packagr": "^13.1.2",
    "prettier": "^2.0.5",
    "protractor": "~7.0.0",
    "standard-version": "^9.3.2",
    "ts-node": "~7.0.0",
    "typescript": "~4.5.4"
  }
}
